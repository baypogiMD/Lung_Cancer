import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

df = pd.read_csv("../data/processed/lung_cancer_cleaned.csv")

sns.histplot(data=df, x="age", hue="lung_cancer", bins=20, kde=True)
plt.title("Age Distribution by Lung Cancer Status")
plt.show()

sns.countplot(data=df, x="gender", hue="lung_cancer")
plt.xticks([0,1], ["Female", "Male"])
plt.title("Gender Distribution")
plt.show()

symptoms = [
    "coughing", "wheezing", "shortness_of_breath",
    "chest_pain", "swallowing_difficulty"
]

df.groupby("lung_cancer")[symptoms].mean().T.plot(kind="bar")
plt.title("Symptom Prevalence by Cancer Status")
plt.show()

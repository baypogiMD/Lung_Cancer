import pandas as pd
import sqlite3
from sqlalchemy import create_engine

df = pd.read_csv("../data/raw/lung_cancer.csv")
df.head()

df.columns = (
    df.columns
    .str.lower()
    .str.replace(" ", "_")
)

binary_cols = df.columns.difference(["age", "gender", "lung_cancer"])

for col in binary_cols:
    df[col] = df[col].map({"YES": 1, "NO": 0})

df["lung_cancer"] = df["lung_cancer"].map({"YES": 1, "NO": 0})
df["gender"] = df["gender"].map({"M": 1, "F": 0})

df.info()
df.isnull().sum()

df.to_csv("../data/processed/lung_cancer_cleaned.csv", index=False)

engine = create_engine("sqlite:///../data/lung_cancer.db")
df.to_sql("lung_cancer", engine, if_exists="replace", index=False)

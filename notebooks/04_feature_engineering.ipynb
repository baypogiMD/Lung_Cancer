import pandas as pd

df = pd.read_csv("../data/processed/lung_cancer_cleaned.csv")

df["lifestyle_risk_score"] = (
    df["smoking"] +
    df["yellow_fingers"] +
    df["alcohol_consumption"]
)

df["symptom_burden"] = (
    df["coughing"] +
    df["wheezing"] +
    df["shortness_of_breath"] +
    df["chest_pain"]
)

df.to_csv("../data/processed/lung_cancer_features.csv", index=False)


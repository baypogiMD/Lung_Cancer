import pandas as pd
import sqlite3

conn = sqlite3.connect("../data/lung_cancer.db")

query = """
SELECT smoking, lung_cancer, COUNT(*) AS count
FROM lung_cancer
GROUP BY smoking, lung_cancer
"""
pd.read_sql(query, conn)

df_sql = pd.read_sql(query, conn)

a = df_sql.query("smoking==1 and lung_cancer==1")["count"].values[0]
b = df_sql.query("smoking==1 and lung_cancer==0")["count"].values[0]
c = df_sql.query("smoking==0 and lung_cancer==1")["count"].values[0]
d = df_sql.query("smoking==0 and lung_cancer==0")["count"].values[0]

odds_ratio = (a/b) / (c/d)
odds_ratio

